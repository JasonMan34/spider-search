{
	"name": "Spider-search",
	"version": "1.0",
	"description": "Uses Google to search for a query in a website",
	"permissions": [
		"storage",
		"activeTab",
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/spider16.png",
			"32": "images/spider32.png",
			"48": "images/spider48.png",
			"128": "images/spider128.png"
		}
	},
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"windows": "Ctrl+Shift+F",
				"mac": "Command+Shift+F"
			}
		}
	},
	"icons": {
		"16": "images/spider16.png",
		"32": "images/spider32.png",
		"48": "images/spider48.png",
		"128": "images/spider128.png"
	},

	"manifest_version": 2
}